<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center">

    <TextView
    android:id="@+id/loadingAppsText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="@string/loadingText"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="@+id/appListview"
    app:layout_constraintEnd_toEndOf="@+id/appListview"
    app:layout_constraintStart_toStartOf="@+id/appListview"
    app:layout_constraintTop_toTopOf="@+id/appListview" />

<ListView
    android:id="@+id/appListview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:divider="@null"
    android:dividerHeight="0dp"
    android:overScrollMode="never"
    android:paddingTop="56dp"
    android:paddingBottom="56dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>